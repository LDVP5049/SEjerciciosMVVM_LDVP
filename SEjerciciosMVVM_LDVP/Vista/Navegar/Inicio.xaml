<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEjerciciosMVVM_LDVP.Vista.Navegar.Inicio"
             Title="Inicio">
    <ContentPage.Content>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0.0" />
                    <GradientStop Color="Gray" Offset="0.5" />
                    <GradientStop Color="Red" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <Label Text="Live-Fit" TextColor="White" FontSize="35" FontAttributes="Italic" HorizontalTextAlignment="Center" Margin="0,100,0,0"/>
            <StackLayout Margin="0,150,0,0">
                <Image Source="https://i.ibb.co/jksc7D4/IMG-6637.png" Margin="0,0,0,0"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>